{
    "manifest_version": 2,

    "name": "PhishDetect",
    "description": "Anti-phishing browser extension. Scan suspicious pages and links.",
    "version": "3.2.0",
    "icons": {
        "16": "ico/icon.png",
        "48": "ico/icon.png",
        "128": "ico/icon.png"
    },
    "browser_action": {
        "default_icon": "ico/icon.png",
        "default_popup": "popup/popup.html"
    },
    "options_ui" : {
        "page": "options/options.html"
    },
    "background": {
        "scripts": [
            "libs/sha256.js",
            "dist/utils.js",
            "js/const.js",
            "js/init.js",
            "js/config.js",
            "js/alarms.js",
            "js/events.js",
            "js/indicators.js",
            "js/background.js"
        ]
    },
    "permissions": [
        "alarms",
        "activeTab",
        "tabs",
        "contextMenus",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["https://mail.google.com/*", "https://inbox.google.com/*"],
            "js": [
                "libs/sha256.js",
                "dist/gmail.js"
            ],
            "css": [
                "css/vex.css",
                "css/vex-theme-default.css",
                "css/tailwind.min.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "fontawesome/",
        "warning/warning.html"
    ]
}
