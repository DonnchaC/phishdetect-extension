{
    "manifest_version": 2,

    "name": "PhishDetect",
    "description": "Anti-phishing browser extension. Scan suspicious pages and links.",
    "version": "3.0.0",
    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup/popup.html"
    },
    "options_ui" : {
        "page": "options/options.html"
    },
    "background": {
        "scripts": ["js/const.js", "js/init.js", "js/config.js", "js/alarms.js", "js/indicators.js", "js/background.js"]
    },
    "permissions": [
        "activeTab",
        "tabs",
        "contextMenus",
        "storage",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["https://mail.google.com/*", "https://inbox.google.com/*"],
            "js": [
                "dist/gmail.js"
            ],
            "css": [
                "css/vex.css",
                "css/vex-theme-default.css",
                "css/tailwind.min.css"
            ],
            "run_at": "document_end"
        }
    ]
}
